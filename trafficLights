//  trafficLights
//  Scott A. Dougherty
//  2017 09 06

//  define pins
#define RED 6
#define YELLOW 5
#define GREEN 4

void setup() {
pinMode(RED, OUTPUT);
pinMode(YELLOW, OUTPUT);
pinMode(GREEN, OUTPUT);
}

//  define light timings
int delayR = 5000;
int delayY = 2000;
int delayG = 5000;

void loop() 
{
digitalWrite(RED, LOW);
digitalWrite(YELLOW, LOW);
digitalWrite(GREEN, HIGH);
delay(delayG);

digitalWrite(RED, LOW);
digitalWrite(YELLOW, HIGH);
digitalWrite(GREEN, LOW);
delay(delayY);

digitalWrite(RED, HIGH);
digitalWrite(YELLOW, LOW);
digitalWrite(GREEN, LOW);
delay(delayR);
}
