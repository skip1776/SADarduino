//  trafficLightsTwo

//  Scott A. Dougherty, papercutter@comcast.net
//  2017 09 17

int redA = 12;
int yellowA = 11;
int greenA = 10;
int redB = 7;
int yellowB = 6;
int greenB = 5;

void setup() {
pinMode(redA, OUTPUT);
pinMode(yellowA, OUTPUT);
pinMode(greenA, OUTPUT);
pinMode(redB, OUTPUT);
pinMode(yellowB, OUTPUT);
pinMode(greenB, OUTPUT);
}

void loop() {
changeLights();
delay(15000);
}

void changeLights() {
// green off, yellow on for 3 seconds
digitalWrite(greenA, LOW);
digitalWrite(yellowA, HIGH);
delay(3000);

// turn off yellow, then turn on red for 5 seconds
digitalWrite(yellowA, LOW);
digitalWrite(redA, HIGH);
delay(5000);

// red and yellow on together for 2 seconds
digitalWrite(yellowA, HIGH);
delay(2000);

// turn off red and yellow, then turn on green for 3 seconds
digitalWrite(redA, LOW);
digitalWrite(yellowA, LOW);
digitalWrite(greenA, HIGH);
delay(3000);
